                <label for="keywords">Mots-clefs</label>
            </div>
            <div class="form-textarea-container">
                <textarea name="content" required></textarea>
                <label for="content">Contenu</label>
            </div>
            <input type="submit" value="Ajouter">
    </div>
    </form> 
</section>
{% endblock %}